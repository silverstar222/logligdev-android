<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="45"
                android:centerColor="@color/colorOrangeCenter"
                android:endColor="@color/colorOrangeLight"
                android:startColor="@color/colorOrangeDark" />
            <stroke
                android:width="1dp"
                android:color="@color/colorOrangeDark" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="45"
                android:centerColor="@color/colorOrangeCenter"
                android:endColor="@color/colorOrangeDark"
                android:startColor="@color/colorOrangeLight" />
            <stroke
                android:width="1dp"
                android:color="@color/colorOrangeDark" />
            <corners android:radius="6dp" />
        </shape>
    </item>
</shape>