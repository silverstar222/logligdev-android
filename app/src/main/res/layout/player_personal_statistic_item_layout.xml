<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/player_details_personal_statistic_statistic_layout_width"
    android:layout_height="@dimen/player_details_personal_statistic_item_height">

    <TextView
        android:id="@+id/playerPersonalStatistic"
        android:layout_width="@dimen/player_details_personal_statistic_width"
        android:layout_height="@dimen/player_details_personal_statistic_statistic_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="top|start"
        android:text="@string/statistic_default"
        android:textSize="@dimen/player_details_personal_statistic_text_size" />

    <TextView
        android:id="@+id/playerPersonalStatisticPoints"
        android:layout_width="@dimen/player_details_personal_statistic_statistic_points_width"
        android:layout_height="@dimen/player_details_personal_statistic_item_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/player_personal_statistic_points"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/player_details_personal_statistic_points_text_size" />

</RelativeLayout>